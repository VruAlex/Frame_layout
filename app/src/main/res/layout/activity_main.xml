<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/TextOne"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,"/>

        <TextView
            android:id="@+id/TextTwo"
            android:layout_below="@id/TextOne"
            android:layout_marginStart="30dp"
            android:textColor="#fff"
            android:textStyle="bold|italic"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers"/>


        <ScrollView
            android:layout_marginTop="50dp"
            android:layout_below="@+id/TextTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:id="@+id/FrameOne"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/curved_corner_white"
                    android:layout_margin="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/curved_corner_blue">


                    </FrameLayout>



                </FrameLayout>

                <FrameLayout
                    android:id="@+id/FrameTwo"
                    android:layout_below="@+id/FrameOne"
                    android:layout_alignParentEnd="true"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/curved_corner_white"
                    android:layout_margin="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:background="@drawable/curved_corner_red">

                    </FrameLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/FrameThree"
                    android:layout_below="@+id/FrameOne"
                    android:layout_alignParentStart="true"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:background="@drawable/curved_corner_white"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="10dp"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:background="@drawable/curved_corner_yellow">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:background="#512da8">

                        </FrameLayout>

                    </FrameLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_below="@+id/FrameTwo"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_corner_white"
                    android:elevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="300dp">

                </FrameLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>